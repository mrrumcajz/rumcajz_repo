<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.mrknow"
       name="Filmy Online - mrknow.pl"
       version="2.0.0"
       provider-name="mrknow">
  <requires>
    <import addon="xbmc.python" version="2.23.0"/>
    <import addon="script.module.pyxbmct" version="1.1.4"/>
    <import addon="script.module.simplejson"/>
    <import addon="script.module.requests" />
    <import addon="script.module.urlresolver" version="5.0.08a"/>
    <!--<import addon="script.mrknow.urlresolver" />-->
	<import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.common.plugin.cache"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Wtyczka MRKNOW (MOD by mrRumcajz)</summary>
    <description>Plugin pozwala nam ogladac filmy, telewizje, sport z polskich stron internetowych. Ikony do wtyczki dostarczył Michał Morawski email: mickpl[malpa]wp.pl. Poniewaz MrKnow reposytorium juz nie jest aktywne, jest to zmodifikowana wtyczka</description>
    <platform>all</platform>
    <forum>https://github.com/mrrumcajz/rumcajz_repo/issues</forum>
	<source>https://github.com/mrrumcajz/rumcajz_repo</source>
    <website>https://github.com/mrrumcajz/rumcajz_repo</website>
  </extension>
</addon>

<addon id="repository.rumcajz_repo" name="rumcajz_repo repository - mrRumcajz" version="1.0.0" provider-name="MrRumcajz">
	<extension point="xbmc.addon.repository" name="rumcajz_repo Kodi Add-on Repository">
		<info compressed="false">https://github.com/mrrumcajz/rumcajz_repo/blob/master/addons.xml</info>
		<checksum>https://github.com/mrrumcajz/rumcajz_repo/blob/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/mrrumcajz/rumcajz_repo/blob/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Install Add-ons  from filmkodi.com</summary>
		<summary lang="pl">Zainstaluj wtyczki z filmkodi.com</summary>
		<description lang="en">Add-ons from filmkodi.com (mrknow.pl) repository.</description>
		<description lang="pl">Wtyczki z nieoficjalnego, repozytorium polskiego mrknow.pl..</description>
		<disclaimer lang="en">Repository has non-comercial nature. Created by enthusiasts, acting in good faith.</disclaimer>
		<disclaimer lang="pl">Zawartość repozytorium ma charakter niekomercyjny, wtyczki tworzone przez pasjonatów, .</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
